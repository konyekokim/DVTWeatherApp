<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="16dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/forecast_day"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_width="wrap_content"
        android:textColor="@color/color_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        tools:text="Tuesday" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/forecast_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/rain_icon"
        app:layout_constraintTop_toTopOf="@id/forecast_day"
        app:layout_constraintBottom_toBottomOf="@id/forecast_day"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forecast_temperature"
        tools:text="20Â°"
        android:textSize="18sp"
        android:textColor="@color/color_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
